@using FinanceManager.Web.Login
@using FinanceManager.Web.Shared.Components
@using FinanceManager.Web.Shared.Layout
@using Microsoft.AspNetCore.Components.Authorization

<Router AppAssembly="@typeof(App).Assembly" NotFoundPage="typeof(NotFound.NotFound)">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <Authorizing>
                <Loading Message="Autenticando..."></Loading>
            </Authorizing>
            
            <NotAuthorized>
                <RedirectToLogin/>
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
    </Found>
</Router>
