<button type="submit" class="btn btn-primary btn-lg w-100 fw-bold" disabled="@IsProcessing">
    @if (IsProcessing)
    {
        <span class="spinner-border spinner-border-sm me-2"></span>
    
        <span>@ProcessingText...</span>
    }
    else
    {
        <span>@DefaultText</span>
    }
</button>

@code {
    [Parameter]
    public string Type { get; set; } = "button";
    [Parameter]
    public required bool IsProcessing { get; set; }
    [Parameter]
    public required string DefaultText { get; set; }
    [Parameter]
    public required string ProcessingText { get; set; }
}